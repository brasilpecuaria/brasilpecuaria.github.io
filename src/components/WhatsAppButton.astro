---
const whatsappNumber = "5567999389340"; 
const whatsappMessage = "Olá, gostaria de saber mais sobre os serviços da Brasil Pecuária Consultoria!";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class="fixed bottom-6 right-6 z-40 group"
  aria-label="Conversar com Brasil Pecuária Consultoria no WhatsApp"
>
  {/* Button container */}
  <div class="relative">
    {/* Pulse animation background */}
    <div class="absolute inset-0 bg-dark-spruce-500 rounded-full animate-pulse opacity-50 group-hover:opacity-100 transition-opacity"></div>
    
    {/* Main button */}
    <div class="relative flex items-center justify-center w-14 h-14 bg-dark-spruce-500 rounded-full shadow-lg hover:shadow-2xl hover:bg-dark-spruce-600 transition-all duration-200 transform hover:scale-110">
      {/* WhatsApp Icon from Font Awesome */}
      <i class="fab fa-whatsapp text-white text-2xl"></i>
    </div>

    {/* Tooltip on hover */}
    <div class="absolute bottom-full right-0 mb-3 bg-dark-spruce-900 text-white text-sm px-3 py-2 rounded-lg whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">
      Conversar no WhatsApp
    </div>
  </div>
</a>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.5;
    }
    50% {
      opacity: 0.2;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
