---
const clientLogos = [
  { id: 1, name: "Client Logo 1" },
  { id: 2, name: "Client Logo 2" },
  { id: 3, name: "Client Logo 3" },
  { id: 4, name: "Client Logo 4" },
  { id: 5, name: "Client Logo 5" },
  { id: 6, name: "Client Logo 6" },
  { id: 7, name: "Client Logo 7" }
];

// Create array with duplicates for seamless infinite scroll
const scrollingLogos = [...clientLogos, ...clientLogos.slice(0, 3)];
---

<section id="gallery" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
      Confiado por Organizações Líderes
    </h2>

    {/* Infinite scroll container */}
    <div class="relative overflow-hidden">
      <div class="flex animate-scroll space-x-8 py-8">
        {scrollingLogos.map((logo) => (
          <div key={logo.id} class="flex-shrink-0 h-20 w-40 bg-white rounded-lg shadow flex items-center justify-center p-4">
            <div class="text-gray-400 font-semibold text-center">{logo.name}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  /* Pause on hover */
  section:hover .animate-scroll {
    animation-play-state: paused;
  }
</style>
